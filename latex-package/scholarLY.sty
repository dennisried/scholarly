\newcommand{\criticalRemark}[6]{\noAnnBreaksBegin
  \item{\CRname\skipornot
  \postannType\preannArg{\annMeasure{M.#1,}}}   \ifthenelse{\equal{#2}{}}{\unskip{}}{\annBeat{beat #2}\skipornot}
  \ifthenelse{\equal{#3}{}}{\unskip{}}{\preannArg\annVoice{#3}\skipornot}
  \ifthenelse{\equal{#4}{}}{\unskip{}}{\preannArg\annAffected{#4}\skipornot}
  \ifthenelse{\equal{#5}{}}{}
    {{\preannArg\annMessage{``#5''}}\ifthenelse{\equal{#6}{}}{\annFootnote{}}{\annFootnote{\footnote{#6}}}}
\noAnnBreaksEnd
}

