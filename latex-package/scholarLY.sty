\newcommand{\criticalRemark}[7][]{
  \resetkeys\setkeys{scholarLYannotations}{#1}
    \noAnnBreaksBegin
      \item{\CRname\typeSkipornot
      \postannType\preannArg{\annMeasure{M.#2,}}}   \ifthenelse{\equal{#3}{}}{\unskip{}}{\annBeat{beat #3}\skipornot}
      \ifthenelse{\equal{#4}{}}{\unskip{}}{\preannArg\annVoice{#4}\skipornot}
      \ifthenelse{\equal{#5}{}}{\unskip{}}{\preannArg\annAffected{#5}\skipornot}
      \ifthenelse{\equal{#6}{}}{}
        {{\preannArg\annMessage{``#6''}}\ifthenelse{\equal{#7}{}}{\annFootnote{}}{\annFootnote{\footnote{#7}}}}
    \noAnnBreaksEnd
}

